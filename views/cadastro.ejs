<%- include("partials/header") %> 
<%- include("partials/navbar") %>

<body>
  <main>
    <div class="d-flex justify-content-center align-items-center vh-100">
      <div class="col-lg-4 col-md-8" id="form-cadastro">
        <div class="text-center login-box p-4 rounded-4 shadow" style="background-color: #0b1e3c; border: 2px solid #fff;">
          <form id="cadastroForm" class="cadastroForm" action="/cadastro" method="POST" autocomplete="on">
            <img class="mb-4" src="/imagens/LogoBSLegends.png" alt="Logo BS Legends" width="150" height="150" />
            <h1 class="login-title text-white">Cadastro</h1>

            <div class="form-group mb-3">
              <input type="text" id="nome" name="nome" class="form-control" placeholder="Nome" autocomplete="given-name" required />
            </div>

            <div class="form-group mb-3">
              <input type="text" id="sobrenome" name="sobrenome" class="form-control" placeholder="Sobrenome" autocomplete="family-name" required />
            </div>

            <div class="form-group mb-3">
              <input type="email" id="email" name="email" class="form-control" placeholder="Seu email" autocomplete="email" required />
            </div>

            <div class="form-group mb-3">
              <input type="password" id="senha" name="senha" class="form-control" placeholder="Senha (mín. 6 caracteres, 1 letra maiúscula e 1 número)" autocomplete="new-password" required />
            </div>

            <div class="form-group mb-3">
              <input type="password" id="confirmarSenha" name="confirmarSenha" class="form-control" placeholder="Confirmar senha" autocomplete="new-password" required />
              <small id="erroSenha" class="text-danger d-none">As senhas não coincidem.</small>
            </div>

            <div id="mensagemSucesso" class="alert alert-success d-none"> Cadastro realizado com sucesso! </div>

            <button class="btn btn-success w-100 btn-lg login-button" type="submit">CADASTRAR</button>
          </form>
        </div>
      </div>
    </div>
  </main>
</body>

<%- include("partials/footer") %>

<script src="/js/cadastro.js"></script>

</body>
</html>
