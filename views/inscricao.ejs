    <!-- Formul√°rio -->
  <main class="container py-5" style="padding-top: 180px;">
    <section class="row justify-content-center align-items-start g-5">
      <div class="col-lg-8">
        <section id="form-login" class="formulario-section text-white p-4 rounded shadow-lg">
          <h2 class="text-center mb-4">Inscri√ß√£o da Equipe</h2>
          <form id="inscricaoForm" method="POST" action="/salvar-inscricao" enctype="multipart/form-data" novalidate>
            
            <h5 class="mb-3">Ol√°, <%= nome %> </h5>
            <div class="mb-3">
              <label for="nomeEquipe" class="form-label">Nome da Equipe</label>
              <input type="text" class="form-control" id="nomeEquipe" name="nomeEquipe" required minlength="3" />
            </div>

            <h5 class="mb-3">Nicks dos Membros Titulares</h5>
            <div class="mb-3">
              <label for="titular1" class="form-label">Titular 1</label>
              <input type="text" class="form-control" id="titular1" name="titular1" required minlength="2" />
            </div>
            <div class="mb-3">
              <label for="titular2" class="form-label">Titular 2</label>
              <input type="text" class="form-control" id="titular2" name="titular2" required minlength="2" />
            </div>
            <div class="mb-3">
              <label for="titular3" class="form-label">Titular 3</label>
              <input type="text" class="form-control" id="titular3" name="titular3" required minlength="2" />
            </div>

            <h5 class="mb-3">Nicks dos Reservas</h5>
            <div class="mb-3">
              <label for="reserva1" class="form-label">Reserva 1</label>
              <input type="text" class="form-control" id="reserva1" name="reserva1" required minlength="2" />
            </div>
            <div class="mb-3">
              <label for="reserva2" class="form-label">Reserva 2</label>
              <input type="text" class="form-control" id="reserva2" name="reserva2" required minlength="2" />
            </div>

            <div class="mb-3">
              <label for="instagram" class="form-label">@ do Instagram da Equipe ou Pessoal</label>
              <input type="text" class="form-control" id="instagram" name="instagram" required pattern="^@[\w\.]+$" />
            </div>

            <div class="mb-3">
              <label for="logoEquipe" class="form-label">Logo da Equipe (PNG, JPG - m√°ximo 3MB)</label>
              <input type="file" class="form-control" id="logoEquipe" name="logoEquipe" accept=".png,.jpg,.jpeg" required />
            </div>

            <div class="mb-3">
              <label for="comprovantePix" class="form-label">Comprovante do Pix (PNG, JPG, PDF - m√°ximo 3MB)</label>
              <input type="file" class="form-control" id="comprovantePix" name="comprovantePix" accept=".png,.jpg,.jpeg,.pdf" required />
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-warning fw-bold px-4">Enviar Inscri√ß√£o</button>
